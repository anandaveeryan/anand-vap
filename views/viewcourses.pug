doctype html
html 
    head
        style.
            body{
                text-align:center;
                background-color: lightblue;
            }
            input[type=text],select{
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                display: inline-block;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }
            input[type=password]{
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                display: inline-block;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }
            input[type=submit] {
                width: 100%;
                background-color: #4CAF50;
                color: white;
                padding: 14px 20px;
                margin: 8px 0;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }
            input[type=submit] {
                width: 100%;
                background-color: #4CAF50;
                color: white;
                padding: 14px 20px;
                margin: 8px 0;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }
            input[type=submit]:hover {
                background-color: #45a049;
            }
            #first{
                border-radius: 5px;
                background-color: #f2f2f2;
                padding: 20px;
                width: 400px;
                height: 200px;
                display: inline-block;
                margin-top: 10%;
            }
            #desc {
                width: 15em;
                border-collapse: collapse;
                
                & th {
                    background-color: whitesmoke;
                    padding: 1em;
                    text-align: left;
                    border: 1px solid black;
                    padding: 1em;
                }
                
                & td {
                    border: 1px solid black;
                    padding: 1em;
                }
                }
    body
        include includes/navigation.pug
        div(id="first")
            -const courses = JSON.parse(course);
            table(style='width:100%', border='1')
                tr
                    th Courses
                    th Faculty
                for i,j in courses
                    tr
                        th #{j}
                        th #{i}
            br
            form(action="/download" method="post")
                input(type="submit" value="Download")